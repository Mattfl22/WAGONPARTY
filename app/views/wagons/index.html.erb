
<div class="container">
  <h1>Our Wagons</h1>
  <div class="d-flex align-items-start">

    <div class="wagons-card flex-row" style="width: 50%">

      <% @wagons.each do |wagon| %>
        <div class="wagon-result border d-flex justify-content-center p-3 mb-2">

          <div class="card-img-top-result rounded">
            <% if wagon.photo.key %>
                <%= cl_image_tag wagon.photo.key, crop: :fill %>
              <% else %>
                <img src="https://images.unsplash.com/photo-1599766431396-2405fdfcf5e4?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1770&q=80"/>
              <% end %>
          </div>

          <div class="card-body" style="margin-left: 20px"%>
            <h5 class="card-title"><%= wagon.name %></h5>
            <p>ðŸš† Departure: <%= wagon.location %></p>
            <div class="dates-display d-flex">
              <p class="me-2">ðŸ“… Available dates:</p>
              <% wagon.dates.each do |date| %>
                <%= date %>
              <% end %>
            </div>
            <a> <%= link_to "Select this wagon", wagon_path(wagon), class: 'btn btn-primary' %> </a>
          </div>

        </div>
      <% end %>

    </div>

      <div class="map ms-3 rounded" style="width: 50%; height: 600px;"
        data-controller="mapbox"
        data-mapbox-markers-value="<%= @markers.to_json %>"
        data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>

  </div>
</div>
