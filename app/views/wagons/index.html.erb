
<div class="container">
  <h1>Our Wagons</h1>
  <div class="d-flex align-items-start">

    <div class="wagons-card flex-row" style="width: 50%">

      <% @wagons.each do |wagon| %>
        <div class="wagon-result d-flex justify-content-center align-items-center mb-2">
          <div class="card-img-top-result rounded">
            <% if wagon.photo.key %>
                <%= cl_image_tag wagon.photo.key, crop: :fill, style:'height: 150px; width: 150px; object-fit:cover' %>
              <% else %>
                <img src="https://images.unsplash.com/photo-1599766431396-2405fdfcf5e4?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1770&q=80", style='height: 150px; width: 150px; object-fit:cover'/>
              <% end %>
          </div>

          <div class="card-body" style="margin-left: 20px"%>
            <h5 class="card-title d-flex justify-content-between align-items-center"><strong><%= wagon.name %></strong><%= link_to "See prices", wagon_path(wagon), class: 'btn btn-primary' %></h5>
            <p>ðŸš† <strong>Departure:</strong> <%= wagon.location %></p>
            <div class="me-2">ðŸ“… <strong>Available dates:</strong>
              <% wagon.dates.each do |date| %>
                <%= date %>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>

    </div>

      <div class="map ms-3 rounded" style="width: 50%; height: 600px;"
        data-controller="mapbox"
        data-mapbox-markers-value="<%= @markers.to_json %>"
        data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>

  </div>
</div>
