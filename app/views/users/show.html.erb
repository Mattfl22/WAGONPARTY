          <h4 class="m-0"> <%= wagon.name %></h4>
          <p class="m-0"> <%= wagon.description %></p>
          <% if policy(wagon).edit? %>
            <%= link_to "Update", edit_user_wagon_path(wagon), class: 'btn btn-primary' %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
